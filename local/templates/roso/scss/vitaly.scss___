/********************************************/
/************CALCULATOR-TOP-BUTTONS**********/
/********************************************/

.catalog {
    .animals_filter_calculator {

        border: 1px solid rgb(241,232,217);

        p {
            display: inline-block;
            width: 206px;
            margin: 0px 0px;
            font-weight: bold;
            padding: 45px 0px 0px 30px;
            float: left;
        }

        a {
            font-size: 15px;
            display: inline-block;
            box-sizing: border-box;
            float: left;
            height: 115px;
            color: #000;
            cursor: pointer;
            background: none;
            position: relative;
            
            >p {
                margin: 0px;
                position: absolute;
                bottom: 40px;                
            }

            &.birds {
                border-right:1px solid #fff;
                border-left:1px solid #fff;
                width: 206px;
                
                >svg {
                    position: absolute;
                    top: 24px;
                    left: 47px;
                }
                >p {right: 46px;}
            }

            &.pigs {
                border-right:1px solid #fff;
                border-left:1px solid #fff;
                width: 228px;

                >svg {
                    position: absolute;
                    top: 31px;
                    left: 33px;
                }
                >p {right: 27px;}
            }

            &.cattle {
                border-left:1px solid #fff;
                width: 288px;

                >p {
                    width: 115px;
                    right: 7px;
                }

                >svg {
                    position: absolute;
                    top: 17px;
                    left: 40px;                    
                }
                
                &.active_button_ajax,
                &:hover {
                    background-color: #f8f3ec;
                    font-weight: 600;
                    border-left: 1px solid #f1e8d9;
                    border-right: none;                    
                }
            }

            &.active_button_ajax,
            &:hover {
                background-color: #f8f3ec;
                font-weight: 600;
                border-left: 1px solid #f1e8d9;
                border-right: 1px solid #f1e8d9;
                
                svg {
                    path {
                        fill:#92C13E;
                    }
                }
            }


        }
    }
}
